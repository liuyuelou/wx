.cart-wrap{
  position: relative;
}
.cart-list{
  width: 100%;
  height: 200rpx;
  /* display: flex;
  justify-content: space-between;
  align-items: center; */
}
.cart-list .cart-list-wrap{
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 20rpx;
}
.cart-list .cart-list-wrap .cart-icon{
  width: 10%;
  text-align: center;
}
.cart-list .cart-list-wrap .cart-image{
  width: 140rpx;
  height: 140rpx;
}
.cart-list .cart-list-wrap .cart-image image{
  width: 140rpx;
  height: 140rpx;
}
.cart-list .cart-list-wrap .cart-content{
  width: 60%;
}
.cart-list .cart-list-wrap .cart-content .cart-title{
  font-size: 24rpx;
  height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart-list .cart-list-wrap .cart-content .cart-other{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
}
.cart-list .cart-list-wrap .cart-content .cart-other .cart-price{
  display: flex;
  color: #f44;
}
.cart-list .cart-list-wrap .cart-content .cart-other .cart-price::before{
  content: "￥";
  color: #f44;
}
.cart-list .cart-list-wrap .cart-content .cart-other .cart-num{
  display: flex;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}
.cart-list .cart-list-wrap .cart-content .cart-other .cart-num text{
  width: 40rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  display: inline-block;
}
.cart-list .cart-list-wrap .cart-content .cart-other .cart-num view{
  width: 60rpx;
  height: 44rpx;
  /* margin: 0 20rpx; */
  border-left: 1px solid #efefef;
  border-right: 1px solid #efefef;
  text-align: center;
}
.cart-list .cart-list-wrap .cart-content .cart-other .dele{
  margin-left: -10rpx;
  font-size: 40rpx;
}

/* 底部导航 */
.cart-footer{
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  background: #fff;
  border-top: 1px solid #efefef;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
}
.cart-footer .cart-icon{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
}
.cart-footer .cart-icon icon{
  margin-top: 45rpx;
}
.allprice text{
  color: #f44;
}
.allprice text::before{
  content: "￥";
  color: #000;
}
.cart-footer .gobuy{
  width: 30%;
  background: #f44;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
}